<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#16181D</item>
        <item name="colorPrimaryDark">#16181D</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#2CFF6F</item>
    </style>

    <style		name="HiUsername" >
        <item name="android:fontFamily" tools:targetApi="jelly_bean">Montserrat</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>	</style>

    <style		name="Lorem">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">Montserrat</item>
        <item name="android:textColor">#E9E9E9</item>
    </style>

    <style		name="DisableNotification"	>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">Poppins</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="GameMode">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/poppins</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Customize">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="EnableDisableNotif">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat</item>
        <item name="android:textColor">#A8A8A8</item>
    </style>
    <style
        name="blueFont">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat</item>
        <item name="android:textColor">#4E10FF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SwitchTheme">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#2CFF6F</item>
    </style>

</resources>
